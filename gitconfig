[user]
	name = Ali Awais
	email = aawais@paloaltonetworks.com
[includeIf "gitdir:~/pan/"]
        path = ~/pan/.gitconfig
[color]
    ui = true
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
	excludesfile = /home/aawais/.gitignore
	editor = vim
	preloadIndex = true
[commit]
[push]
[branch]
	autosetuprebase = always
[giggle]
	main-window-maximized = false
	main-window-geometry = 1295x1135+2136+0
	file-view-hpane-position = 256
	history-view-vpane-position = 657
	main-window-view = FileView
	file-view-vpane-position = 707
	show-graph = true
[alias]
	last = log -1 HEAD
	unstage = reset HEAD --
	co = checkout
	br = branch
	ci = commit
	st = status
	g = grep --break --heading --line-number
	lg-ascii = log --graph --pretty=format:'%h -%d %s (%cr) <%an>' --abbrev-commit
    lg =log --pretty=format:'%C(auto)%h %C(green)%ad | %C(blue)%<(12,trunc)%an%C(auto)%d %C(reset)%s%d' --graph --date=short
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[[:lower:]]"


[merge]
	tool = meld
[submodule]
	recurse = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
